{
	"name": "kanban_server",
	"version": "1.0.0",
	"description": "Kanban Server",
	"main": "server.js",
	"scripts": {
		"build": "tsc",
		"dev": "nodemon",
		"start": "node build/server.js",
		"db:generate": "npx prisma generate",
		"db:migrate": "npx prisma migrate dev --name init",
		"db:studio": "npx prisma studio",
		"db:seed": "npx prisma db seed",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"prepare": "husky install",
		"format": "prettier --config .prettierrc.json --write .",
		"check:types": "tsc --pretty --noEmit",
		"check:formatting": "prettier --config .prettierrc.json --check .",
		"check:linting": "eslint . --ext js --ext ts",
		"check:everything": "npm run check:types && npm run check:formatting && npm run check:linting",
		"test": "jest --coverage"
	},
	"keywords": [
		"fastify",
		"node",
		"typescript",
		"docker"
	],
	"author": "Sahas Saurav",
	"license": "ISC",
	"dependencies": {
		"@prisma/client": "^4.4.0",
		"dayjs": "^1.11.5",
		"fastify": "^4.8.1",
		"fastify-type-provider-zod": "^1.1.7",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/jest": "^29.1.2",
		"@types/node": "^18.11.0",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-standard-with-typescript": "^23.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.3.0",
		"eslint-plugin-promise": "^6.1.0",
		"husky": "^8.0.0",
		"jest": "^29.2.0",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"prisma": "^4.4.0",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	}
}
